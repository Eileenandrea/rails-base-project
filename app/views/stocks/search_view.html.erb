<div class="search_area">
<div class="heading-container mb-5 d-flex">
  <h1 class="heading-primary heading-primary-h1">Search Stock</h1>
  <%if current_user.buyer?%>.
    <h2 class="heading-primary heading-primary-h3">
      <i class="fas fa-wallet"></i> Available Cash: <span>$<%=number_with_precision(current_user.cash, :precision => 2)%></span> 
    </h2>
  <%end%>
</div>

<%= form_tag stock_search_path, remote: true, method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9 no-right-padding">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<div id="results">
<%=render 'stocks/results'%>
</div>